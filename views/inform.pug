doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Chivo:wght@300&family=Eczar&display=swap" rel="stylesheet"> 
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;700&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
        <link rel="shortcut icon" type="image/x-icon" href="../public/img/logo.png" />
        link(rel="stylesheet", href="../public/css/inform.css")
        script(src="https://kit.fontawesome.com/a076d05399.js") 
        title Inform About Misshappenings
    body 
        header#nav-area
        div#navbar
            a(href="http://policex.herokuapp.com").logo 
                div#logo
                    img(src="../public/img/logo.png", alt="", srcset="")
                    h1 #[span P]olice - X
            ul
                li #[a(href='/dashboard') Dashboard]
                //- li #[a(href="http://") About Us]
                li #[a(href="#news") News]
                li #[a(href="http://") Services] 
                form(action="/logout", method="post") 
                    button#btn Logout

        div#content
            div.userDashboard
                h1 Inform about mishappenings

            div.welcome
                p Welcome, #[span(style = "color: rgb(1, 75, 97); text-transform : uppercase; text-shadow: 0px 0 1px #000") #{fName} !]

            div.information
                form(action="/inform", method="post") 
                    div.sec1.display
                        div.informationAbout
                            p.title Information About :
                            input(type="text" placeholder="Eg : Road rage/ Fire" name="informationAbout" required).input
                        div.dateOfMishap
                            p.title Date of Mishap :
                            input(type="Date" placeholder="Date of Mishap" name="dateOfMishap" required).input
                    
                    div.sec2.display
                        div.placeOfMishap
                            p.title Place of Mishap : 
                            input(type="text" placeholder="Eg : 6th Street Bangalore" name="placeOfMishap" required).input
                        div.city
                            p.title City :
                            input(type="text" placeholder="Eg : Mumbai" name="city" required).input
                        
                    div.sec3.display
                        div.description
                            p.title Description about Mishap :
                            textarea(cols="72", rows="6" placeholder="Description about Mishappening..." name="description" required)

                    div.button
                        input(type="submit", value="Submit")#button