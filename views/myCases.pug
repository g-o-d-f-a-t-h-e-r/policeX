doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Chivo:wght@300&family=Eczar&display=swap" rel="stylesheet"> 
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;700&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500&display=swap" rel="stylesheet">
        <link rel="shortcut icon" type="image/x-icon" href="../public/img/logo.png" />
        link(rel="stylesheet", href="../public/css/myCases.css")
        script(src="https://kit.fontawesome.com/a076d05399.js") 
        title My Cases
    body 
        header#nav-area
        div#navbar
            a(href="http://policex.herokuapp.com").logo 
                div#logo
                    img(src="../public/img/logo.png", alt="", srcset="")
                    h1 #[span P]olice - X
            ul
                li #[a(href='/dashboard') Dashboard]
                //- li #[a(href="http://") About Us]
                li #[a(href="#news") News]
                li #[a(href="http://") Services] 
                form(action="/logout", method="post") 
                    button#btn Logout

        div#content
            div.userDashboard
                h1 MY cases

            div.welcome
                p Welcome, #[span(style = "color: rgb(1, 75, 97); text-transform : uppercase; text-shadow: 0px 0 1px #000") #{fName} !]
            
            div.btn
                a(href="/fileFIR")#btn File FIR

            div.card
                table.content-table
                    thead 
                        tr
                            th FIR No 
                            th Alleged Photo 
                            th Complaint Against 
                            th Complaint Type 
                            th Status 
                            th Action
                    
                    tbody 
                        
                        for user in users 
                            tr.FIR 
                            th #{user.firNo} 
                            td  
                                if user.allegedPhoto === 'NA'
                                    img(src="https://img.icons8.com/fluent/100/000000/gender-neutral-user.png", alt="Alleged Image", id="img")
                                else
                                    img(src=`/firImages/?filename=${user.allegedPhoto}`, alt="Alleged Image", id="img")
                            td #{user.complaintAgainst} 
                            td #{user.typeOfComplaint} 
                            td  
                                if user.status == 0
                                    p.status Pending 
                                if user.status == 1
                                    p.status In Progress 
                                if user.status == 2
                                    p.status Approved 
                            td.action
                                a(href=`/viewFIR/?firNo=${user.firNo}`).viewFIR View FIR
                                a(href=`/editFIR/?firNo=${user.firNo}&filename=${user.allegedPhoto}`).editFIR Edit FIR 
                                a(href=`/deleteFIR/?firNo=${user.firNo}&filename=${user.allegedPhoto}`).deleteFIR Delete FIR





        script(src="../public/scripts/myCases.js")        